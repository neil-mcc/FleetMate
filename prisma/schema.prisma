generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Car {
  id                 Int      @id @default(autoincrement())
  registrationNumber String
  make               String
  model              String
  year               Int
  lastServiceDate    DateTime?
  nextServiceDue     DateTime?
  motDueDate         DateTime?
  insuranceRenewal   DateTime?
  taxRenewal         DateTime?

  @@index([registrationNumber])
}

